<% layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1486915309851-b0cc1f8a0084?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=300&h=280&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Forgot your password?</h5>
          <form
            action="/forgot-password"
            method="POST"
            class="validated-form"
            novalidate
          >
            <div class="mb-3 mt-4">
              <label class="form-label" for="email"
                >Enter your registered email</label
              >
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                placeholder="Email"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-light btn-outline-primary btn-block">
              Send Reset Link
            </button>
          </form>
          <div class="mt-3">
            <a class="text-decoration-none link-primary" href="/login"
              >Back to Login</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
